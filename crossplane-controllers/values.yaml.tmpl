nameOverride: crossplane

replicas: 1

deploymentStrategy: RollingUpdate

image:
  repository: crossplane/crossplane
  tag: %%VERSION%%
  pullPolicy: Always

args:
- '--debug'

imagePullSecrets:
- dockerhub

hostedConfig:
  enabled: false
  tenantKubeconfigSecret: ""
  tenantKubernetesServiceHost: ""
  tenantKubernetesServicePort: ""
  controllerNamespace: ""
  crossplaneSATokenSecret: ""

templateStacks:
  enabled: false
  # TODO(displague) dont merge until this can point at crossplane/resourcepacks:master
  controllerImage: crossplane/templating-controller:0.1.0
