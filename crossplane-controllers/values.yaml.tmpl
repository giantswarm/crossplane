nameOverride: crossplane

replicas: 1

deploymentStrategy: RollingUpdate

image:
  repository: crossplane/crossplane
  tag: %%VERSION%%
  pullPolicy: Always

args: {}

rbacManager:
  deploy: true
  managementPolicy: All

imagePullSecrets:
- dockerhub

hostedConfig:
  enabled: false
  tenantKubeconfigSecret: ""
  tenantKubernetesServiceHost: ""
  tenantKubernetesServicePort: ""
  controllerNamespace: ""
  crossplaneSATokenSecret: ""
  rbacManagerSATokenSecret: ""

templateStacks:
  enabled: true
  controllerImage: crossplane/templating-controller:v0.2.1

priorityClassName: ""

resourcesCrossplane:
  limits:
    cpu: 100m
    memory: 512Mi
  requests:
    cpu: 100m
    memory: 256Mi

resourcesPackageManager:
  limits:
    cpu: 100m
    memory: 512Mi
  requests:
    cpu: 100m
    memory: 256Mi

resourcesRBACManager:
  limits:
    cpu: 100m
    memory: 512Mi
  requests:
    cpu: 100m
    memory: 256Mi

forceImagePullPolicy: ""

insecureAllowAllApigroups: false

insecurePassFullDeployment: false

insecureInstallJob: false
